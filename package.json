{
  "name": "@srshkmr02/recastra",
  "version": "0.5.4",
  "description": "A lightweight TypeScript plugin for recording audio and video using WebRTC",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srshkmr/recastra.git"
  },
  "bugs": {
    "url": "https://github.com/srshkmr/recastra/issues"
  },
  "homepage": "https://github.com/srshkmr/recastra#readme",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.js.map",
    "recastra.d.ts"
  ],
  "scripts": {
    "build": "rollup -c && node -e \"const fs = require('fs'); const path = require('path'); const indexDtsPath = path.join('dist', 'index.d.ts'); const indexDtsContent = 'export { Recastra, RecastraOptions } from \\'./Recastra\\';'; fs.writeFileSync(indexDtsPath, indexDtsContent);\"",
    "build:legacy": "node build.js",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky",
    "publish:public": "npm publish --access public"
  },
  "keywords": [
    "webrtc",
    "audio",
    "video",
    "recording",
    "typescript",
    "browser"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/dom-mediacapture-record": "^1.0.22",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.5.3",
    "rollup": "^4.46.2",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
